{
  "name": "noclat.com",
  "version": "1.0.0",
  "description": "Nicolas Torres, full-stack web developer, designer and minimalist from Paris, France, crafting digital tools.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noclat/noclat.com.git"
  },
  "author": "Nicolas Torres",
  "license": "MIT",
  "homepage": "https://noclat.com",
  "scripts": {
    "clear": "rm -rf ./build ./.cache",
    "dev": "parcel ./src/index.html -d ./build -p 3000",
    "build": "parcel build ./src/index.html -d ./build --no-source-maps",
    "serve": "serve ./build -l 3000",
    "deploy": "yarn clear && yarn build && firebase deploy"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "cssnano": "^4.1.10",
    "parcel-bundler": "^1.12.4",
    "serve": "^11.2.0",
    "tailwindcss": "^1.1.4"
  }
}
